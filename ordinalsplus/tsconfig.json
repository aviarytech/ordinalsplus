{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "types": ["node", "bun-types"]
  },
  "include": ["src/**/*", "test/global.d.ts", "test/**/*"],
  "exclude": ["node_modules", "dist"]
} 